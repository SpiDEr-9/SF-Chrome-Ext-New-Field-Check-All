{
    "name": "SF SPIDER",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "permissions": ["activeTab", "scripting","storage", "scripting","tabs"],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      
      "js": ["content.js"],
      
      "run_at": "document_end"
      
      },
      {
        "matches": ["*://*/setup/field/NewCustomFieldStageManager"],
        "js": ["sfadmin.js"],    
        "all_frames": false,
        "match_origin_as_fallback": false,
        "match_about_blank": false,
        "run_at": "document_idle",
        "world": "ISOLATED"
      }
   ]
      
      
  }